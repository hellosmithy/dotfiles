# Themes
# ghostty +list-themes
theme = nightfox

# Fonts
# ghostty +list-fonts
font-family = "FiraCode Nerd Font Mono"
# enable ligatures
font-feature = calt
font-feature = liga
font-feature = dlig
font-size = 16

# Splits
unfocused-split-opacity=0.6

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = ctrl+s>shift+5=new_split:down
keybind = ctrl+s>shift+'=new_split:right
keybind = ctrl+s>x=close_surface
keybind = ctrl+s>z=toggle_split_zoom

# Tabs
keybind = ctrl+s>left_bracket=previous_tab
keybind = ctrl+s>right_bracket=next_tab
keybind = ctrl+s>c=new_tab

# Quick Terminal
keybind = global:cmd+ctrl+shift+alt+t=toggle_quick_terminal
quick-terminal-screen=mouse
quick-terminal-animation-duration=0
quick-terminal-autohide=1
